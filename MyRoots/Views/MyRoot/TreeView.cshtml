                <h3>Data urodzenia :</h3><input type="date" data-bind="datePicker:familyMemberToAdd().dateOfBirth, datePattern: 'MM/DD/YYYY'"><br />
                <h3>Miejsce urodzenia :</h3><input type="text" data-bind="textInput:familyMemberToAdd().birthPlace, datePattern: 'MM/DD/YYYY'"><br />
                <h3>Data śmierci :</h3><input type="date" data-bind="datePicker:familyMemberToAdd().dateOfDeath"><br />
                <h3>Obrazek :</h3><input type="file" data-bind="event: { change: function() { UploadImage($element.files[0]) } }"><br />
                <h3>Opis :</h3><input type="text" data-bind="texInput:familyMemberToAdd().description"><br />

